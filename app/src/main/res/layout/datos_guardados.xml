<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/edtUser"
        android:ems="10"
        android:id="@+id/edtUser"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/edtFecha"
        android:layout_alignStart="@+id/edtFecha"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtNombreAgenda"
        android:hint="Nombre"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/edtUser"
        android:layout_alignLeft="@+id/edtUser"
        android:layout_alignStart="@+id/edtUser"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/edtApellido"
        android:ems="10"
        android:id="@+id/edtApellido"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvNum"
        android:layout_toEndOf="@+id/tvNum"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edtFecha"
        android:hint="@string/edtFecha"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/edtApellido"
        android:layout_alignLeft="@+id/btnVolverMenu"
        android:layout_alignStart="@+id/btnVolverMenu"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/edtSexo"
        android:ems="10"
        android:id="@+id/edtSexo"
        android:layout_below="@+id/edtFecha"
        android:layout_alignLeft="@+id/edtFecha"
        android:layout_alignStart="@+id/edtFecha"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/edtSangre"
        android:ems="10"
        android:id="@+id/edtSangre"
        android:layout_below="@+id/edtSexo"
        android:layout_alignLeft="@+id/edtSexo"
        android:layout_alignStart="@+id/edtSexo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtNum"
        android:hint="@string/edtNum"
        android:layout_below="@+id/edtSangre"
        android:layout_alignLeft="@+id/edtSangre"
        android:layout_alignStart="@+id/edtSangre"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVolverMenu"
        android:id="@+id/btnVolverMenu"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="28dp"
        android:layout_below="@+id/edtNum"
        android:layout_toRightOf="@+id/btnEditarDatos"
        android:layout_toEndOf="@+id/btnEditarDatos"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnEditarDatos"
        android:id="@+id/btnEditarDatos"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignBaseline="@+id/btnVolverMenu"
        android:layout_alignBottom="@+id/btnVolverMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvEmail"
        android:id="@+id/tvEmail"
        android:layout_above="@+id/edtNombreAgenda"
        android:layout_alignLeft="@+id/btnEditarDatos"
        android:layout_alignStart="@+id/btnEditarDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNombre"
        android:id="@+id/tvNombre"
        android:layout_alignTop="@+id/edtNombreAgenda"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvApellido"
        android:id="@+id/tvApellido"
        android:layout_alignTop="@+id/edtApellido"
        android:layout_alignLeft="@+id/tvFecha"
        android:layout_alignStart="@+id/tvFecha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvFecha"
        android:id="@+id/tvFecha"
        android:layout_alignBaseline="@+id/edtFecha"
        android:layout_alignBottom="@+id/edtFecha"
        android:layout_alignLeft="@+id/tvSexo"
        android:layout_alignStart="@+id/tvSexo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvSexo"
        android:id="@+id/tvSexo"
        android:layout_alignTop="@+id/edtSexo"
        android:layout_alignLeft="@+id/tvSangre"
        android:layout_alignStart="@+id/tvSangre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvSangre"
        android:id="@+id/tvSangre"
        android:layout_alignTop="@+id/edtSangre"
        android:layout_alignLeft="@+id/btnEditarDatos"
        android:layout_alignStart="@+id/btnEditarDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNum"
        android:id="@+id/tvNum"
        android:layout_above="@+id/btnEditarDatos"
        android:layout_alignLeft="@+id/btnEditarDatos"
        android:layout_alignStart="@+id/btnEditarDatos" />


</RelativeLayout>